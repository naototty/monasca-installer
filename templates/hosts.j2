# Offline Hosts
[offline_group]
offline-resources-host           ansible_ssh_host={{ monasca_host }} ansible_ssh_user={{ ssh_user_monasca }}

# Openstack Hosts
[openstack_group]
horizon-host                     ansible_ssh_host={{ openstack_host }} ansible_ssh_user={{ ssh_user_openstack }}
keystone-host                    ansible_ssh_host={{ openstack_host }} ansible_ssh_user={{ ssh_user_openstack }}

# Monasca Hosts
[monasca_group]
monasca-host                     ansible_ssh_host={{ monasca_host }} ansible_ssh_user={{ ssh_user_monasca }}

# Monasca Agent Hosts
[monasca_agent_group]
monasca-monasca-agent            ansible_ssh_host={{ monasca_host }} ansible_ssh_user={{ ssh_user_monasca }}
openstack-monasca-agent          ansible_ssh_host={{ openstack_host }} ansible_ssh_user={{ ssh_user_openstack }}

# Monasca Log Agent Hosts
[monasca_log_agent_group]
monasca-monasca-log-agent        ansible_ssh_host={{ monasca_host }} ansible_ssh_user={{ ssh_user_monasca }}
openstack-monasca-log-agent      ansible_ssh_host={{ openstack_host }} ansible_ssh_user={{ ssh_user_openstack }}

[all_group:children]
offline_group
openstack_group
monasca_group
monasca_agent_group
monasca_log_agent_group
