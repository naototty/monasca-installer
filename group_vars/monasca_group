# logrotate configuration
logrotate_scripts:
  - name: influxdb
    path: "{{ influxdb_log_dir }}/*.log"
    options:
      - daily
      - missingok
      - rotate 10
      - compress
      - delaycompress
      - notifempty
      - create 06400 {{ influx_db_user }} {{ influx_db_group }}
      - copytruncate
      - noemail
  - name: monasca_log_persister
    path: "{{ monasca_log_persister_log_dir }}/*.log"
    options:
      - daily
      - missingok
      - rotate 10
      - compress
      - delaycompress
      - notifempty
      - create 06400 root root
      - copytruncate
      - noemail
