# file: group_vars/monasca_log_agent_group

# logstash agent download url
logstash_agent_download_url: "{{ balls_repo_url }}/world"
logstash_agent_version: 2.3.4

# directories
base_dir_agent: /opt/monasca
log_dir: /var/log
logstash_agent_dest: "{{ base_dir_agent }}/monasca-log-agent"
logstash_agent_conf_dir: /etc/monasca/monasca-log-agent
logstash_agent_log_dir: /var/log/monasca/monasca-log-agent
log_files:
  - "{{ logstash_agent_log_dir }}"
  - "{{ log_dir }}/messages"
  - "{{ log_dir }}/yum.log"
  - "{{ log_dir }}/boot.log"

# services
uninstall_services:
  - { name: "monasca-log-agent", assets: [ "{{ logstash_agent_conf_dir }}" ]}
uninstall_packages:
   RedHat:
     - { assets: [
        "{{ logstash_agent_dest }}",
        "{{ base_dir_agent }}/logstash-{{ logstash_agent_version }}",
        "{{ base_dir_agent }}/logstash" ]}
uninstall_directories:
  - { dir: "{{ monasca_work_dir }}", force: False}
  - { dir: "{{ monasca_conf_dir }}", force: False}

logrotate_scripts:
  - name: monasca_log_agent
    path: "{{ logstash_agent_log_dir }}/*.log"
    options:
      - daily
      - missingok
      - rotate 10
      - compress
      - delaycompress
      - notifempty
      - create 06400 root root
      - copytruncate
      - noemail
