keepalived_script_weight: 60

logrotate_scripts:
  - name: keepalived
    path: "{{ keepalived_log_file }}"
    options:
      - daily
      - missingok
      - rotate 10
      - compress
      - delaycompress
      - notifempty
      - create 06400 root root
      - copytruncate
      - nomail
