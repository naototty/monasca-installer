keepalived_global_router_id: "{{ hostvars[keepalived_router_id]['ansible_ssh_host'] }}"

keepalived_iptables_network: "{{ hostvars['keepalived-virtual-node']['ansible_ssh_host'].split('.')[:3] | join('.') }}.0/24"

