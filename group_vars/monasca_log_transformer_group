  - name: monasca_log_transformer
    path: "{{ monasca_log_transformer_log_dir }}/*.log"
    options:
      - daily
      - missingok
      - rotate 10
      - compress
      - delaycompress
      - notifempty
      - create 06400 {{ log_transformer_user }} {{ log_transformer_group }}
      - copytruncate
      - noemail
