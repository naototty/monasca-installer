---
# file: host_vars/csi-monasca-agent

# Monasca Agent user credentials
monasca_agent:
  user: csi-agent
  password: password
  project: csi

# Monasca Agent Configuration
monasca_agent_service: monitoring

# Additionally you can specify any number of name:value pairs in 'init_config'
# which will be available on every run in 'self.init_config'
monasca_checks:
  host_alive:
    init_config:
      ssh_port: 22
      ssh_timeout: 0.5
      ping_timeout: 1
    instances:
      - name: openstack
        host_name: "{{ openstack_host }}"
        alive_test: ssh
  elastic:
    init_config:
    instances:
      - url: "{{ elasticsearch_url }}"
  http_check:
    init_config:
    instances:
      - name: Kibana
        url: "{{ kibana_url }}"
        timeout: 1
        dimensions:
          service: kibana
